{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "quill",
  "appearance": "light",
  "name": "Buddy",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5",
    "background": {
      "light": "#FAFBFC",
      "dark": "#0F1117"
    },
    "anchors": {
      "from": "#6366F1",
      "to": "#EC4899"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "User Guide",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "onboarding"
            ]
          },
          {
            "group": "Core Features",
            "pages": [
              "features/dashboard",
              "features/customers",
              "features/products",
              "features/orders",
              "features/pricing",
              "features/invoices"
            ]
          },
          {
            "group": "Advanced Features",
            "pages": [
              "features/warehouses",
              "features/data-reviews",
              "features/activity-log",
              "features/import-export"
            ]
          },
          {
            "group": "Integrations",
            "pages": [
              "integrations/overview",
              "integrations/shopify",
              "integrations/quickbooks",
              "integrations/slack",
              "integrations/email-forwarding"
            ]
          },
          {
            "group": "Settings",
            "pages": [
              "settings/organization",
              "settings/team"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoints/customers",
              "api-reference/endpoints/products",
              "api-reference/endpoints/orders"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Support",
          "href": "mailto:support@usebuddy.io",
          "icon": "envelope"
        },
        {
          "anchor": "Open Buddy",
          "href": "https://app.usebuddy.io",
          "icon": "arrow-up-right-from-square"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@usebuddy.io"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open Buddy",
      "href": "https://app.usebuddy.io"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://linkedin.com/company/usebuddy"
    }
  },
  "backgroundImage": "/images/background.png",
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  },
  "search": {
    "prompt": "Search documentation..."
  }
}
